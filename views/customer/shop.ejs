<html>

<head>
  <link href="/css/styles.css" type="text/css" rel="stylesheet" />
</head>

<body class="customer">
  <%- include('./_menu.ejs') %>
  <%- include('./_inform.ejs') %>
  <img src="/images/backround.jpg">

  <div class="text-center">
    <h2 class="text-center" style="font-weight: bold; margin-top: 100px; margin-bottom: 30px;">LIST PRODUCTS</h2>

    <%  for (var prod of newprods) { %>
      <div class="inline" style="margin-right: 20px; margin-left: 20px; margin-top: 10px; margin-bottom: 10px;">
        <figure>
          <a href="./details?id=<%=prod._id%>"><img src="data:image/jpg;base64,<%=prod.image%>" width="300px" height="300px" /></a>
          <figcaption class="text-center"><%=prod.Name%><br />Price: <%=prod.Price%><br /><%=prod.Brand%></figcaption>
        </figure>
      </div>
      <%  } %>
    </div>
    </div>
    
</body>
<%- include('./footer.ejs') %>
</html>